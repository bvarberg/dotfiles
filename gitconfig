[alias]
  st = status
  ol = log --oneline
  nevermind = checkout -- .
  uncommit = reset --soft HEAD^
  unstage = reset
  foldin = commit --amend --no-edit
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{u}
  glog = log -E -i --grep

[core]
  autocrlf = input
  excludesfile = ~/.gitignore

[credential]
  helper = osxkeychain

[include]
  path = ~/.gitconfig.local

